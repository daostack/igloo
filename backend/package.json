{
  "name": "@igloo/backend",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prisma-migrate": "prisma migrate dev --name init --schema ./src/prisma/schema.prisma",
    "prisma-reset": "rm -rf ./src/prisma/migrations && cd ./src &&  prisma migrate reset --force --preview-feature && prisma migrate dev --name init && cd ..",
    "prisma-generate": "prisma generate --schema=./src/prisma/schema.prisma",
    "prisma-migrate-test": "POSTGRES_URL=postgresql://postgres:postgres@localhost:5442/igloo-test?schema=public prisma migrate dev --name init --schema  ./src/prisma/schema.prisma",
    "prisma-reset-test": "rm -rf ./src/prisma/migrations && POSTGRES_URL=postgresql://postgres:postgres@localhost:5442/igloo-test?schema=public prisma migrate reset --force --preview-feature --schema  ./src/prisma/schema.prisma && yarn prisma-migrate-test",
    "test": "POSTGRES_URL=postgresql://postgres:postgres@localhost:5442/igloo-test?schema=public jest --runInBand test/main.test.ts",
    "reboot": "yarn prisma-reset && yarn start",
    "start": "nodemon src/server.ts",
    "prod": "NODE_ENV='production' ts-node src/server.ts",
    "lint": "eslint --config ./.eslintrc --ignore-path ./.eslintignore ./src/**/*.ts",
    "lint-fix": "eslint --config ./.eslintrc --ignore-path ./.eslintignore ./src/**/*.ts --fix"
  },
  "dependencies": {
    "@igloo/core": "^0.0.1",
    "@prisma/client": "^4.4.0",
    "@types/express-session": "^1.17.5",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "ethers": "^5.7.2",
    "express": "^4.17.2",
    "express-fileupload": "^1.4.0",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "siwe": "^1.1.6",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^16.11.10",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "29",
    "nodemon": "^2.0.15",
    "prisma": "^4.4.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "4.5.2"
  }
}
