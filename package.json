{
  "name": "@igloo/monorepo",
  "version": "0.0.0",
  "keywords": [],
  "private": true,
  "scripts": {
    "build": "yarn workspace @igloo/core build",
    "up": "yarn workspace @igloo/backend up",
    "migrate": "yarn workspace @igloo/backend prisma-migrate",
    "start": "yarn start-frontend & yarn start-backend",
    "start-test": "yarn start-test-core & yarn start-backend",
    "start-test-core": "yarn workspace @igloo/test-core start",
    "start-frontend": "yarn workspace @igloo/frontend start",
    "start-backend": "yarn workspace @igloo/backend start",
    "reset-yarn": "yarn delete-yarn && yarn install",
    "delete-yarn": "yarn delete-node-modules && yarn delete-yarn-lock",
    "delete-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "delete-yarn-lock": "find . -name 'yarn.lock' -type f -prune -exec rm -rf '{}' +"
  },
  "workspaces": [
    "core",
    "frontend",
    "backend",
    "test-core"
  ],
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "shx": "^0.3.4"
  }
}
